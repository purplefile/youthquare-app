<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:id="@+id/card_news_root_layout"
                                   app:cardElevation="16dp"
                                   app:cardCornerRadius="8dp"
                                   app:cardUseCompatPadding="true"
                                   app:cardPreventCornerOverlap="false"
                                   android:clickable="true"
                                   android:foreground="?attr/selectableItemBackground"
                                   app:cardBackgroundColor="@android:color/white">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/card_news_bottom_three_summary_container">
            <ImageView
                    android:id="@+id/news_card_background_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/shadow_top_to_bottom"/>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/shadow_bottom_to_top"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp">
                <RelativeLayout
                        android:id="@+id/card_news_category_container"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/category_background"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">
                    <TextView
                            android:id="@+id/card_news_category_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="경제 / 사회"
                            android:textSize="12dp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"/>
                </RelativeLayout>
                <TextView
                        android:id="@+id/card_news_title_text"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        tools:text="택시, 사회적타협기구 참여전제로&apos;先 카풀앱중단&apos; 요구"
                />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
                android:id="@+id/card_news_bottom_three_summary_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@android:color/white"
                android:padding="24dp"
                android:orientation="vertical">
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/ic_comment"/>
            <TextView
                    android:id="@+id/three_summary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#b4b4b4"
                    android:text="민주당이 &apos;사회적 대타협 기구&apos;를 통해 &apos;카풀문제&apos;를 해결하겠다는 의지를 밝혔지만 택시업계는 타협기구참여의 전제로 &apos;카풀앱&apos;의 중단을 요구하고 있다"
            />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>