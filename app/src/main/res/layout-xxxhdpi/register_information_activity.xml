<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">
    <ImageView android:id="@+id/register_information_back_button"
               android:layout_width="48dp"
               android:layout_height="48dp"
               app:srcCompat="@drawable/ic_arrow_back_black"
               android:padding="12dp"
               android:clickable="true"
               android:foreground="?attr/selectableItemBackground"/>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:orientation="vertical">
        <ImageView android:layout_width="wrap_content" android:layout_height="300dp"
                   app:srcCompat="@drawable/standing"
                   android:layout_gravity="center"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:textColor="#222222"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:text="본인인증"
                android:layout_gravity="center"
                android:layout_marginTop="46dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#222222"
                android:gravity="center_horizontal"
                android:layout_marginLeft="56dp"
                android:layout_marginRight="56dp"
                android:layout_marginTop="16dp"
                android:text="YOUTHQAURE 서비스는 13세에서 24세 이하의\n청소년만 이용 가능합니다. 따라서 연령인증을 위해\n학생증, 주민등록증을 찍어주세요."/>
    </LinearLayout>
    <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:elevation="0dp"
            android:background="#ff4040"
            android:stateListAnimator="@null"
            android:layout_alignParentBottom="true"
            android:text="다음"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:cornerRadius="0dp"
            android:layout_margin="0dp"
            android:insetBottom="0dp"
            android:insetTop="0dp"
            android:foreground="?attr/selectableItemBackground"/>
</RelativeLayout>